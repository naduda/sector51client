{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@core": [
        "./src/app/core"
      ],
      "@core/*": [
        "./src/app/core/*"
      ],
      "@shared": [
        "./src/app/shared"
      ],
      "@shared/*": [
        "./src/app/shared/*"
      ],
      "@clients": [
        "./src/app/clients"
      ],
      "@clients/*": [
        "./src/app/clients/*"
      ],
      "@settings": [
        "./src/app/settings"
      ],
      "@settings/*": [
        "./src/app/settings/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}